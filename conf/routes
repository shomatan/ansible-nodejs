
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Posts
GET     /api/v1/posts               me.shoma.play_cms.controllers.api.v1.PostController.list
GET     /api/v1/posts/:id           me.shoma.play_cms.controllers.api.v1.PostController.find(id: Long)
POST    /api/v1/posts               me.shoma.play_cms.controllers.api.v1.PostController.post

# Authentication
POST    /api/v1/auth/signUp         me.shoma.play_cms.controllers.api.v1.auth.SignUpController.submit
POST    /api/v1/auth/signIn         me.shoma.play_cms.controllers.api.v1.auth.SignInController.submit